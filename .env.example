# Application Configuration
# Public URL of your deployed application
NEXT_PUBLIC_URL=https://ci-moment.vercel.app

# Payment Configuration (redirect-based)
# Create a Payment Page in your provider (Fondy / WayForPay / etc.)
# Set Success URL to: https://ci-moment.vercel.app/success
# Paste the payment link here
NEXT_PUBLIC_PAYMENT_URL=

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Stripe Configuration (legacy — used by webhook route)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Webhook Configuration (legacy — used by webhook route)
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Payment Link (MVP payment flow)
# Create a $5 product + Payment Link in Stripe Dashboard
# Set the success URL to: https://ci-moment.vercel.app/success
NEXT_PUBLIC_STRIPE_PAYMENT_LINK=

# Fondy Configuration
# Get these from: https://portal.fondy.eu/
FONDY_MERCHANT_ID=your-fondy-merchant-id
FONDY_SECRET_KEY=your-fondy-secret-key
